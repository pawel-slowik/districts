        }
    ],
    "require": {
        "php": "^8.3",
        "ext-dom": "20031129",
        "ext-pdo_mysql": "^8.3",
        "ext-xml": "^8.3",
        "bryanjhv/slim-session": "^4.0",
        "doctrine/dbal": "^4.0",
        "doctrine/orm": "^3.0",
        "fig/http-message-util": "^1.1",
        "guzzlehttp/guzzle": "^7.4",
        "laminas/laminas-uri": "^2.11",
        "nyholm/psr7": "^1.2",
        "nyholm/psr7-server": "^1.0.1",
        "php-di/php-di": "^7.0",
        "slim/slim": "^4.3",
        "slim/twig-view": "^3.0",
        "symfony/cache": "^6.4",
        "symfony/console": "^6.4"
    },
    "autoload": {
        "psr-4": {"Districts\\": "./src/"}
    },
    "require-dev": {
        "ext-pdo_sqlite": "^8.3",
        "friendsofphp/php-cs-fixer": "^3.49",
        "phpstan/phpstan": "^1.10.57",
        "phpstan/phpstan-doctrine": "^1.3.61",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^10",
        "squizlabs/php_codesniffer": "^3.10"
    },
    "autoload-dev": {
        "psr-4": {"Districts\\Test\\": "./tests/"}
    },
    "scripts": {
        "cs": [
            "vendor/bin/php-cs-fixer fix -v --dry-run --diff",
            "vendor/bin/phpcs -s --standard=phpcs.xml src dependencies tests bin"
        ],
        "cs-fix": [
            "vendor/bin/php-cs-fixer fix -v",
            "vendor/bin/phpcbf src dependencies tests bin"
        ],
        "test": [
            "vendor/bin/phpunit"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
