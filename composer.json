{
    "license": "MIT",
    "authors": [
        {
            "name": "Paweł Słowik",
            "email": "pawel.slowik@zoho.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-dom": "*",
        "ext-libxml": "*",
        "ext-pdo_mysql": "*",
        "ext-xml": "*",
        "bryanjhv/slim-session": "^4.0",
        "doctrine/dbal": "^4.0",
        "doctrine/orm": "^3.0",
        "fig/http-message-util": "^1.1",
        "guzzlehttp/guzzle": "^7.4",
        "kevquirk/simple.css": "^2.3",
        "laminas/laminas-uri": "^2.11",
        "nyholm/psr7": "^1.2",
        "nyholm/psr7-server": "^1.0.1",
        "php-di/php-di": "^7.0",
        "slim/slim": "^4.3",
        "slim/twig-view": "^3.0",
        "symfony/cache": "^6.4",
        "symfony/console": "^6.4"
    },
    "autoload": {
        "psr-4": {"Districts\\": "./src/"}
    },
    "require-dev": {
        "ext-pdo_sqlite": "*",
        "doctrine/event-manager": "^2.0",
        "phpunit/phpunit": "^11.2"
    },
    "autoload-dev": {
        "psr-4": {"Districts\\Test\\": "./tests/"}
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit"
        ],
        "assets": "php -r \"copy('vendor/kevquirk/simple.css/simple.min.css', 'public/assets/css/simple.min.css');\"",
        "post-install-cmd": "@assets",
        "post-update-cmd": "@assets"
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "kevquirk/simple.css",
                "version": "2.3.5",
                "dist": {
                    "url": "https://github.com/kevquirk/simple.css/archive/refs/tags/v2.3.5.zip",
                    "type": "zip"
                }
            }
        }
    ],
    "config": {
        "sort-packages": true
    }
}
